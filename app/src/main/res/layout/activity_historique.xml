<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a.webview.HistoriqueActivity">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/barchart"
        android:layout_height="400dp"
        android:layout_width="295dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="J-1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/day7"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14sp"
        android:layout_marginTop="41dp"
        android:layout_alignTop="@+id/barchart"
        android:layout_alignParentStart="true"
        android:elevation="1dp" />

    <TextView
        android:text="J-4"
        android:layout_height="20dp"
        android:id="@+id/day4"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_width="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="J-2"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/day6"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/day7"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="J-5"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/day3"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/day4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="J-6"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:id="@+id/day2"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_below="@+id/day3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="J-7"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:id="@+id/day1"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_below="@+id/day2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="J-3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day5"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/day4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Les 7 derniers jours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/textView24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="?attr/actionModeSplitBackground"
        tools:textStyle="bold|italic" />


</RelativeLayout>
